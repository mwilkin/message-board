<div class="answerContent">
  {{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div class="">
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label>
        {{textarea value=content id="content"}}
      </div>
      <button {{action 'saveAnswer1'}}>Submit</button>
    </form>
  </div>
  {{else}}
    <hr>
    <button class="btn btn-warning"{{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
</div>

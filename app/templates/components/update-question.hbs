{{#if updateQuestionForm}}
<h4>Update {{question.author}}'s {{question.question}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=question.author id="author"}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{textarea value=question.question id="question"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{textarea value=question.notes id="notes"}}
    </div>
    <button {{action 'update'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateQuestionForm'}}>Update Question</button>

{{/if}}

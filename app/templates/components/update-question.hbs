{{#if updateQuestionForm}}
<h4>Update {{question.author}}'s {{question.question}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" placeholder=question.question}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" placeholder=question.notes}}
    </div>
  </form>
  <button {{action 'save1'}}>Save</button>
</div>
{{else}}
<button {{action 'questionFormShow'}}>Update Question</button>

{{/if}}
